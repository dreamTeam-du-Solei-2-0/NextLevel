                <Grid Background="Gray" Width="200" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top"></Grid>
                <TextBlock Text="Content" HorizontalAlignment="Center" VerticalAlignment="Top"></TextBlock>
                <TextBox Text="Count:"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="241,36,0,0"></TextBox>
